#:kivy 1.9.0
#:set track_info_width 150
#:set track_info_height 50
#:import NumericProperty kivy.properties.NumericProperty

<TrackInfo@BoxLayout>
    orientation: 'vertical'
    size_hint_x: None
    size_hint_y: None
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Label:
        text: 'ahoj'
        halign: 'left'
        width: track_info_width - 10
        text_size: track_info_width - 20, None
    Label:
        text: 'behoj'
        halign: 'left'
        width: track_info_width - 10
        text_size: track_info_width - 20, None
        bold: True

<Playlist@FloatLayout>:
    track_info_width: track_info_width
    track_info_height: track_info_height

<RootLayout@FloatLayout>:
    canvas.before:
        Rectangle:
            source: '/home/kuba/playlist2/src/party.jpg'
            pos: self.center_x-2*500, self.center_y-2*300
            size: 2*1200, 2*600

    BoxLayout:
        orientation: 'vertical'

        StackLayout:
            orientation: 'tb-lr'
            size_hint_y: None
            height: 40
            canvas.before:
                Color:
                    rgba: 0, 0, 0.5, 0.6
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: 'Přidat nové skladby'
                size: self.texture_size[0] + 20, self.texture_size[1]
                size_hint_x: None
            
            Button:
                text: 'Správce skladeb'
                size: self.texture_size[0] + 20, self.texture_size[1]
                size_hint_x: None

        ProgressBar:
            max: 100
            value: 50
            size_hint_y: None
            height: 5

        Playlist:
            id: playlist
            track_info_width: track_info_width
            track_info_height: track_info_height
        
        TextInput:
            multiline: False
            size_hint_y: None
            height: self.font_size + 15